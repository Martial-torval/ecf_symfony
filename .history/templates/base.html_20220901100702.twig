    <span class="navbar-toggler-icon"></span>
  </button>
  <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
    <div class="navbar-nav">
         {% if is_granted('ROLE_ADMIN') %}
      <a class="nav-item nav-link" href="{{ path('admin') }}"><button type="button" class="btn btn-warning mx-2">Admin</button></a>
            {% endif %}

       {% if is_granted('IS_AUTHENTICATED_REMEMBERED') %}
      <a class="nav-item nav-link disabled" href="{{ path('logout') }}"> <button type="button" class="btn btn-warning">Déconnexion</button></a>
        {% else %}
      <a class="nav-item nav-link active" href="{{ path('login') }}"><button type="button" class="btn btn-warning">Connexion</button></a>
      <a class="nav-item nav-link" href="{{ path('registration') }}"><button type="button" class="btn btn-warning mx-2">Inscription</button></a>
           {% endif %}
