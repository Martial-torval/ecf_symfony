<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        <!-- CSS only -->
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous">
        <!-- JavaScript Bundle with Popper -->
        <link rel="stylesheet" href="{{ asset('assets/css/style.css')}}"/> 
        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>
    <body>
    <header class="border border-warning border-top-0 border-right-0 border-left-0 d-flex justify-content-between align-items-center">
        <nav class="navbar navbar-expand-lg navbar-light w-100">
        <a class="navbar-brand" href="#"><img src="{{ asset('assets/img/logo.png')}}" alt="logo" class="logo my-2 ms-2"/></a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
       </button>
  <div class="collapse navbar-collapse justify-content-end" id="navbarNavAltMarkup">
    <div class="navbar-nav">
         {% if is_granted('ROLE_ADMIN') %}
      <a class="nav-item nav-link" href="{{ path('admin') }}"><button type="button" class="btn btn-warning mx-2">Admin</button></a>
            {% endif %}

       {% if is_granted('IS_AUTHENTICATED_REMEMBERED') %}
      <a class="nav-item nav-link" href="{{ path('logout') }}"> <button type="button" class="btn btn-warning">Déconnexion</button></a>
        {% else %}
      <a class="nav-item nav-link active" href="{{ path('login') }}"><button type="button" class="btn btn-warning">Connexion</button></a>
      <a class="nav-item nav-link" href="{{ path('registration') }}"><button type="button" class="btn btn-warning mx-2">Inscription</button></a>
           {% endif %}
    </div>
  {# </div> #}
</nav>
    </header>
        {% block body %}
       
        {% endblock %}
        <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js" integrity="sha384-IQsoLXl5PILFhosVNubq5LC7Qb9DXgDA9i+tQ8Zj3iwWAwPtgFTxbJ8NT4GN1R8p" crossorigin="anonymous"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.min.js" integrity="sha384-cVKIPhGWiC2Al4u+LWgxfKTRIcfu0JTxR+EQDz/bgldoEyl4H0zUF0QKbrJ0EcQF" crossorigin="anonymous"></script>
    </body>
</html>
